<%= form_with model: question do |form|%>
  <p><%=form.label :body, "Текст питання" %></p>
  <p><%= form.text_area :body , rows: 5 , class: 'form-text-area'%></p>

  <p class="margin_top_small"><%=form.label :user_id %></p>
  <p><%= form.text_field :user_id ,class: 'form-text-field'%></p>

  <p class="margin_top_small"><%= form.submit 'Зберегти' , class: 'button button-main'%></p>

  <%end%>