<div class="container">
  <h2 class="title">Приєднуйся та розвивайся</h2>

  <div class="margin_top_small">
    <% if @user.errors.any?%>
      <% @user.errors.full_messages.each do |message|%>
        <p class="text-red"><%= message%></p>
      <% end%>
    <%end%>
  </div>

  <div class="margin_top_small">
    <%= form_with model: @user , data: {turbo: false} do |form|%>
      <p><%= form.label :name , 'Ваше ім''я'%></p>
      <p><%= form.text_field :name , class: 'form-text-field'%></p>

      <p class="margin_top_small"><%= form.label :nickname , 'Ваш нікнейм'%></p>
      <p><%= form.text_field :nickname , class: 'form-text-field'%></p>

      <p class="margin_top_small"><%= form.label :email %></p>
      <p><%= form.text_field :email , class: 'form-text-field'%></p>

      <p class="margin_top_small"><%= form.label :password %></p>
      <p><%= form.password_field :password , class: 'form-text-field'%></p>

      <p class="margin_top_small"><%= form.label :password_confirmation %></p>
      <p><%= form.password_field :password_confirmation , class: 'form-text-field'%></p>

      <p class="margin_top_log"><%= form.submit 'Зареєструватися' , class: 'button button-main' %></p>
    <%end%>
  </div>
</div>